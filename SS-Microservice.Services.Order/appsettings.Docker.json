{
  "app": {
    "name": "order-service"
  },
  "GrpcSettings": {
    "ProductUrl": "http://product-service:5161"
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "OrderDbContext": "Server=mysql; User ID=root; Password=Nms10102002; Database=order_service"
  },
  "ConsulConfig": {
    "DiscoveryAddress": "http://consul:8500",
    "Name": "OrderService",
    "ID": "OrderService",
    "Port": 5231,
    "Address": "order-service",
    "HealthCheckEndPoint": "api/healths/status"
  },
  "RabbitMqSettings": {
    "Uri": "rabbitmq",
    "UserName": "guest",
    "Password": "guest"
  },
  "Tokens": {
    "Key": "NguyenMinhSon10102002",
    "Issuer": "https://api.nms.com.vn"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level:u3}] {Message}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithThreadId", "WithMachineName" ]
  },
  "jaeger": {
    "enabled": true,
    "serviceName": "OrderService",
    "udpHost": "jaeger",
    "udpPort": 6831,
    "maxPacketSize": 0,
    "sampler": "const"
  },
  "elk": {
    "enabled": true,
    "url": "http://elasticsearch:9200",
    "indexFormat": "order-service-{0:yyyy.MM.dd}",
    "basicAuthEnabled": false,
    "username": "user",
    "password": "secret"
  },
  "metrics": {
    "enabled": true,
    "prometheusEnabled": true,
    "prometheusFormatter": "protobuf",
    "env": "local",
    "interval": 5
  },
  "restEase": {
    "loadBalancer": "",
    "services": [
      {
        "name": "address-service",
        "host": "address-service",
        "scheme": "http",
        "port": "5254"
      },
      {
        "name": "auth-service",
        "host": "auth-service",
        "scheme": "http",
        "port": "5074"
      },
      {
        "name": "user-operation-service",
        "host": "user-operation-service",
        "scheme": "http",
        "port": "5082"
      },
      {
        "name": "inventory-service",
        "host": "inventory-service",
        "scheme": "http",
        "port": "5237"
      },
      {
        "name": "product-service",
        "host": "product-service",
        "scheme": "http",
        "port": "5160"
      }
    ]
  }
}