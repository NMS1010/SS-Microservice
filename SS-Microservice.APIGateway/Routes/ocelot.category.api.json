        {
          "Host": "localhost",
          "Port": 7096
        }
      ],
      "UpstreamPathTemplate": "/categories/all",
      "UpstreamHttpMethod": [ "GET" ]
    },
    {
      "UseServiceDiscovery": true,
      "Servicename": "ProductService",
      "DownstreamPathTemplate": "/api/categories/{everything}",
